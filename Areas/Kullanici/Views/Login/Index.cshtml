@model FurkanBelikirikSmartProFinalProject.Models.KullaniciLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı Giriş</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">SmartPro Kütüphanesi</h2>
                        <h3 class="text-center text-bg-primary p-2">Kullanıcı Girişi</h3>
                        @using (Html.BeginForm())
                        {
                            <div class="mb-3">
                                @Html.LabelFor(x => x.kullaniciAdi, new { @class = "control-label" })
                                @Html.TextBoxFor(x => x.kullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı", required = "required" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(x => x.sifre, new { @class = "form-label" })
                                @Html.PasswordFor(x => x.sifre, new { @class = "form-control", placeholder = "Parola", required = "required" })
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        }
                        <div class="mt-3">
                            <a href="@Url.Action("Index","KullaniciKayit",new { area = "Kullanici" })" class="btn btn-success w-100"><strong>Kayıt Ol</strong></a>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.Mesaj))
                        {
                            <div class="alert alert-danger d-flex align-items-center mt-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>
                                    @Html.Raw(ViewBag.Mesaj)
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="text-center">
                    <p class="mt-2">&copy; @DateTime.Now.Year - Furkan Belikırık </p>
                    <p><small>SmartPro Teknoloji Yazılım Uzmanlığı MVC Projesi</small></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
</body>
</html>